{
  "extends": "./node_modules/core-commons/shared/eslint.json",
  "overrides": [
    {
      "files": ["lib/index.js"],
      "rules": {
        "no-underscore-dangle": [
          "warn",
          {
            "allow": ["_transform"],
            "allowAfterSuper": false,
            "allowAfterThis": false,
            "enforceInMethodNames": true
          }
        ]
      }
    },
    {
      "files": ["lib/index.test.js"],
      "rules": {
        "no-secrets/no-secrets": ["error", { "ignoreContent": ["SubscribeToShardEvent"] }]
      }
    }
  ]
}
