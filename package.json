{
  "name": "lifion-aws-event-stream",
  "version": "1.0.1",
  "description": "Node.js parser for the application/vnd.amazon.eventstream content-type.",
  "keywords": [
    "aws",
    "aws-event-stream",
    "cloud",
    "content-type",
    "event-stream",
    "node",
    "parser",
    "stream"
  ],
  "author": "Edgardo Avil√©s <eaviles@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifion/lifion-aws-event-stream.git"
  },
  "bugs": {
    "url": "https://github.com/lifion/lifion-aws-event-stream/issues"
  },
  "homepage": "https://github.com/lifion/lifion-aws-event-stream#readme",
  "main": "lib/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build-docs": "jsdoc2md -t ./templates/README.hbs ./lib/*.js > ./README.md && git add ./README.md",
    "build-docs-watch": "npm-watch build-docs",
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{md,js,json}' '!reports/**/*.{js,json}'",
    "jest": "JEST_JUNIT_OUTPUT=./reports/junit/js-test-results.xml jest",
    "jest-watch": "npm run jest -- --watch --coverageReporters=html",
    "lint": "eslint . --ext .js,.json --format junit -o ./reports/junit/js-lint-results.xml",
    "prepare": "check-engines",
    "test": "npm run jest -- --ci --runInBand && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "crc": "^3.8.0"
  },
  "devDependencies": {
    "auto-changelog": "^1.10.2",
    "check-engines": "^1.5.0",
    "codecov": "^3.1.0",
    "eslint": "^5.9.0",
    "eslint-config-lifion": "^1.0.3",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^8.0.5",
    "npm-watch": "^0.4.0",
    "prettier": "^1.15.2"
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": "./templates/CHANGELOG.hbs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build-docs && lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": "./lib",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "renovate": {
    "branchPrefix": "feature/renovate-",
    "engines": {
      "enabled": false
    },
    "extends": [
      "config:base"
    ],
    "rangeStrategy": "bump"
  },
  "watch": {
    "build-docs": {
      "patterns": [
        "./lib"
      ]
    }
  }
}
